<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeto2.Desktop.ReceptionistDashboardController">
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" text="Create Client" onAction="#handleCreateClient" />
                <Button mnemonicParsing="false" text="Schedule Repair" onAction="#handleScheduleRepair" />
                <Button mnemonicParsing="false" text="Create Receipt" onAction="#handleCreateReceipt" />
                <Button mnemonicParsing="false" text="Order Parts" onAction="#handleOrderParts" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <VBox prefHeight="300.0" prefWidth="500.0">
            <children>
                <Label text="Parts in stock">
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Label>
                <ListView prefHeight="200.0" prefWidth="200.0" />
            </children>
        </VBox>
    </children>
</VBox>
