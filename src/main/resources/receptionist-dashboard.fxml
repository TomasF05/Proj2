<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeto2.Desktop.ReceptionistDashboardController" style="-fx-background-color: #1a1a1a;">
    <VBox spacing="15.0" style="-fx-background-color: #2d2d2d; -fx-pref-width: 250px;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <Button fx:id="dashboardButton" text="Dashboard" onAction="#onDashboardButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
            <Button fx:id="appointmentsButton" text="Agendamentos" onAction="#onAppointmentsButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
            <Button fx:id="inventoryButton" text="InventÃ¡rio" onAction="#onInventoryButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
            <Button fx:id="createClientButton" text="Criar Cliente" onAction="#onCreateClientButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
            <Button fx:id="createInvoiceButton" text="Criar Fatura" onAction="#onCreateInvoiceButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="logoutButton" text="Sair" onAction="#onLogoutButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
        </children>
    </VBox>
    <VBox prefHeight="400.0" prefWidth="500.0" HBox.hgrow="ALWAYS">
        <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0" spacing="20.0">
                <children>
                    <Button mnemonicParsing="false" text="Create Client" onAction="#handleCreateClient" />
                    <Button mnemonicParsing="false" text="Schedule Repair" onAction="#handleScheduleRepair" />
                    <Button mnemonicParsing="false" text="Create Receipt" onAction="#handleCreateReceipt" />
                    <Button mnemonicParsing="false" text="Order Parts" onAction="#handleOrderParts" />
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </HBox>
            <VBox prefHeight="300.0" prefWidth="500.0">
                <children>
                    <Label text="Parts in stock">
                        <padding>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </Label>
                    <ListView prefHeight="200.0" prefWidth="200.0" />
                </children>
            </VBox>
        </children>
    </VBox>
</HBox>
