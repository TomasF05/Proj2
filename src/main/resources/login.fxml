<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeto2.Desktop.LoginController">
<padding>
    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
</padding>

<!-- Title -->
<Label text="Login" style="-fx-text-fill: #ff6b35;" VBox.vgrow="NEVER">
    <font>
        <Font size="24.0" />
    </font>
</Label>

<!-- Login Form -->
<GridPane hgap="10.0" vgap="15.0" alignment="CENTER" style="-fx-background-color: #2d2d2d; -fx-padding: 20px; -fx-border-radius: 10px;">
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: white;" />
    <TextField fx:id="usernameField" promptText="Enter username" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: white;" />
    <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Button text="Login" onAction="#handleLogin" style="-fx-background-color: linear-gradient(to right, #ff6b35, #ff9a00); -fx-text-fill: white; -fx-font-size: 16px;" GridPane.rowIndex="2" GridPane.columnIndex="1" />
</GridPane>
</VBox>