<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projeto2.Desktop.LoginController"
      spacing="20.0"
      alignment="CENTER"
      style="-fx-background-color: linear-gradient(from 100% 100% to 0% 0%, #1a1a1a 0%, #292929 100%); -fx-padding: 20px;">
    <padding>
        <Insets top="100.0" right="20.0" bottom="100.0" left="20.0" />
    </padding>

    <VBox spacing="20.0"
          alignment="CENTER"
          prefWidth="360.0" minWidth="360.0" maxWidth="360.0"
          style="-fx-background-color: #2d2d2d; -fx-padding: 40px; -fx-background-radius: 10px;">
        <Label text="Login"
               style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" />

        <VBox spacing="15.0">
            <TextField fx:id="usernameField"
                       promptText="Username"
                       style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px; -fx-text-fill: white;" />
            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px; -fx-text-fill: white;" />
        </VBox>

        <Button text="Login"
                onAction="#handleLogin"
                style="-fx-background-color: linear-gradient(to right, #ff6b35, #ff9a00); -fx-text-fill: white; -fx-padding: 10px; -fx-font-size: 16px; -fx-background-radius: 5px;" />
    </VBox>
</VBox>
