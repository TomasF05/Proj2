<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeto2.Desktop.DashboardController">
<!-- Sidebar -->
<left>
    <VBox spacing="15.0" style="-fx-background-color: linear-gradient(to bottom, #2d2d2d, #1a1a1a); -fx-pref-width: 250px;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label text="AutoPro" style="-fx-text-fill: #ff6b35;" VBox.vgrow="NEVER">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Button text="Dashboard" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
        <Button fx:id="servicesButton" text="Services" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
        <Button fx:id="inventoryButton" text="Inventory" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
        <Button text="Orders" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" />
    </VBox>
</left>

<!-- Header -->
<top>
    <HBox style="-fx-background-color: #2d2d2d; -fx-padding: 15px;">
        <Label text="Mechanic Dashboard" style="-fx-text-fill: white;">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
    </HBox>
</top>

<!-- Main Content -->
<center>
    <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #1a1a1a;">
        <Label text="Welcome to AutoPro Workshop!" style="-fx-text-fill: white;">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label text="Today's Progress: 62%" style="-fx-text-fill: white;">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
    </VBox>
</center>
</BorderPane>