<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projeto2.Desktop.mechanic.ReceiveOrderPartController"
      prefHeight="400.0" prefWidth="600.0">
    <TableView fx:id="orderedPartsTable">
        <columns>
            <TableColumn text="Order ID" fx:id="orderIdColumn"/>
            <TableColumn text="Supplier" fx:id="supplierColumn"/>
            <TableColumn text="Order Date" fx:id="orderDateColumn"/>
            <TableColumn text="Part Name" fx:id="partNameColumn"/>
            <TableColumn text="Quantity Ordered" fx:id="quantityOrderedColumn"/>
            <TableColumn text="Quantity Received" fx:id="quantityReceivedColumn" prefWidth="120.0"/>
        </columns>
    </TableView>
    <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="NEVER">
        <padding>
            <javafx.geometry.Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button text="Save Received Quantities" onAction="#handleSaveReceivedQuantities"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>