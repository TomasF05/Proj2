<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<VBox fx:id="sidebarVBox" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projeto2.Desktop.mechanic.SidebarControllerMechanic"
      spacing="15.0"
      style="-fx-background-color: #2d2d2d; -fx-pref-width: 250px;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Button fx:id="dashboardButton" text="Início" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" onAction="#onDashboardButtonClick" />
        <Button fx:id="servicesButton" text="Serviços" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" onAction="#onServicesButtonClick" />
        <Button fx:id="inventoryButton" text="Inventário" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" onAction="#onInventoryButtonClick" />
        <Button fx:id="ordersButton" text="Encomendas" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" onAction="#onOrdersButtonClick" />
        <!-- Add a spacer to push the "Sair" button to the bottom -->
        <Region VBox.vgrow="ALWAYS" />
        <Button text="Sair" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" onAction="#onLogoutButtonClick" />
    </children>
</VBox>