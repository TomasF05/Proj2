<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Region?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projeto2.Desktop.mechanic.ServicesController"
      style="-fx-background-color: #1a1a1a;" HBox.hgrow="ALWAYS">
    <VBox spacing="15.0" style="-fx-background-color: #2d2d2d; -fx-pref-width: 250px;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <Button fx:id="dashboardButton" text="Início" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" onAction="#onDashboardButtonClick" />
            <Button fx:id="servicesButton" text="Serviços" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" onAction="#onServicesButtonClick" />
            <Button fx:id="inventoryButton" text="Inventário" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" onAction="#onInventoryButtonClick" />
            <Button fx:id="ordersButton" text="Encomendas" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" onAction="#onOrdersButtonClick" />
            <!-- Add a spacer to push the "Sair" button to the bottom -->
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="logoutButton" text="Sair" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" onAction="#onLogoutButtonClick" />
        </children>
    </VBox>
    <VBox spacing="20.0" style="-fx-background-color: #1a1a1a; -fx-padding: 20px;" HBox.hgrow="ALWAYS">
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
        </padding>
        <Label text="Reparações de hoje" style="-fx-text-fill: white; -fx-font-size: 18px;" />

        <VBox fx:id="repairsList" spacing="15.0" style="-fx-background-color: #2d2d2d; -fx-padding: 15px; -fx-spacing: 10px;" />
    </VBox>
</HBox>