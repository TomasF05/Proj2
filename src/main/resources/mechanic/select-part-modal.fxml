<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projeto2.Desktop.mechanic.SelectPartModalController"
      spacing="15.0"
      style="-fx-background-color: #1a1a1a; -fx-padding: 20px;" stylesheets="/styles.css">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>
    <Label text="Select Parts" style="-fx-text-fill: white; -fx-font-size: 18px;" />

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Search:" style="-fx-text-fill: white;" />
        <TextField fx:id="searchField" promptText="Enter part name" HBox.hgrow="ALWAYS" style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-prompt-text-fill: #cccccc; -fx-padding: 5px; -fx-background-radius: 5px;" />
    </HBox>

    <ListView fx:id="partListView" VBox.vgrow="ALWAYS" style="-fx-background-color: #2d2d2d; -fx-control-inner-background: #2d2d2d; -fx-text-fill: white;" />

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #555555; -fx-text-fill: white; -fx-padding: 5 15 5 15; -fx-background-radius: 5;" />
        <Button text="Add Selected Parts" onAction="#handleAddSelectedParts" style="-fx-background-color: linear-gradient(to right, #ff6b35, #ff9a00); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15 5 15; -fx-background-radius: 5;" />
    </HBox>
</VBox>