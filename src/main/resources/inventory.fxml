<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeto2.Desktop.InventoryController">
<padding>
    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
</padding>

<Label text="Inventory" style="-fx-text-fill: white;">
    <font>
        <Font size="24.0" />
    </font>
</Label>

<TableView fx:id="inventoryTable" prefWidth="600.0" prefHeight="300.0" style="-fx-background-color: #2d2d2d; -fx-text-fill: white; -fx-font-size: 16px;">
    <columns>
        <TableColumn text="Name" prefWidth="200.0" />
        <TableColumn text="Reference" prefWidth="100.0" />
        <TableColumn text="Price" prefWidth="100.0" />
        <TableColumn text="Stock" prefWidth="100.0" />
    </columns>
</TableView>

<HBox spacing="10" alignment="CENTER">
    <Button text="Add Part" style="-fx-background-color: #ff6b35; -fx-text-fill: white;" />
    <Button text="Edit Selected" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    <Button text="Delete Selected" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
</HBox>
</VBox>