<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox fx:id="sidebarVBox" prefHeight="400.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.projeto2.Desktop.SidebarController"
      spacing="15.0"
      style="-fx-background-color: #2d2d2d; -fx-pref-width: 250px;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Button mnemonicParsing="false" text="Dashboard" onAction="#onDashboardButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
        <Button mnemonicParsing="false" text="Agendamentos" onAction="#onAppointmentsButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
        <Button mnemonicParsing="false" text="Inventário" onAction="#onInventoryButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
        <Button mnemonicParsing="false" text="Reparações" onAction="#onRepairsButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
        <Region VBox.vgrow="ALWAYS" />
        <Button mnemonicParsing="false" text="Sair" onAction="#onLogoutButtonClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
    </children>
</VBox>