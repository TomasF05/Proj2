<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projeto2.Desktop.mechanic.SidebarController"
      spacing="10"
      styleClass="sidebar">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>
   <Button fx:id="dashboardButton" text="Dashboard" onAction="#onDashboardButtonClick"
           style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity"/>
   <Button fx:id="servicesButton" text="Serviços" onAction="#onServicesButtonClick"
           style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity"/>
   <Button fx:id="inventoryButton" text="Inventário" onAction="#onInventoryButtonClick"
           style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity"/>
   <Button fx:id="ordersButton" text="Encomendas" onAction="#onOrdersButtonClick"
           style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity"/>
</VBox>