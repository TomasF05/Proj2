<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projeto2.Desktop.CreateClientController"
      spacing="20.0"
      style="-fx-background-color: #1a1a1a; -fx-padding: 20px;">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>
    <Label text="Criar Cliente" style="-fx-text-fill: white; -fx-font-size: 18px;" />

    <VBox spacing="15.0" style="-fx-background-color: #2d2d2d; -fx-padding: 15px; -fx-spacing: 10px;">
        <HBox spacing="10.0">
            <Label text="Nome:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <TextField fx:id="nameField" style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <HBox spacing="10.0">
            <Label text="NIF:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <TextField fx:id="nifField" style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <HBox spacing="10.0">
            <Label text="Contacto:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <TextField fx:id="contactField" style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <HBox spacing="10.0">
            <Label text="CÃ³digo Postal:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <Button text="Select Postal Code" onAction="#handleSelectPostalCode" style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <Button text="Criar Cliente" onAction="#handleCreateClient" style="-fx-background-color: linear-gradient(to right, #ff6b35, #ff9a00); -fx-text-fill: white; -fx-padding: 10px; -fx-font-size: 16px; -fx-background-radius: 5px;" />
    </VBox>
</VBox>