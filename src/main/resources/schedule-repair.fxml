<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<HBox prefHeight="400.0" prefWidth="600.0" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeto2.Desktop.ScheduleRepairController" style="-fx-background-color: #1a1a1a;">
    <VBox spacing="15.0" style="-fx-background-color: #2d2d2d; -fx-pref-width: 250px;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <Button fx:id="dashboardButton" text="Dashboard" onAction="#onDashboardButtonClick" style="-fx-fill: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
            <Button fx:id="appointmentsButton" text="Agendamentos" onAction="#onAppointmentsButtonClick" style="-fx-fill: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
            <Button fx:id="inventoryButton" text="InventÃ¡rio" onAction="#onInventoryButtonClick" style="-fx-fill: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
             <Button fx:id="createClientButton" text="Criar Cliente" onAction="#onCreateClientButtonClick" style="-fx-fill: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
            <Button fx:id="createInvoiceButton" text="Criar Fatura" onAction="#onCreateInvoiceButtonClick" style="-fx-fill: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="logoutButton" text="Sair" onAction="#onLogoutButtonClick" style="-fx-fill: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER_LEFT;" maxWidth="Infinity" />
        </children>
    </VBox>
    <VBox prefHeight="400.0" prefWidth="500.0" HBox.hgrow="ALWAYS">
        <children>
            <Label text="Schedule Repair">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </Label>
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label text="Date:" />
                    <TextField GridPane.columnIndex="1" />
                    <Label text="Time:" GridPane.rowIndex="1" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Agendamento:" GridPane.rowIndex="2" />
                    <Button mnemonicParsing="false" text="Select Appointment Slot" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label text="Observations:" GridPane.rowIndex="3" />
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" />
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </GridPane>
            <Button mnemonicParsing="false" text="Confirm">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
        </children>
    </VBox>
</HBox>