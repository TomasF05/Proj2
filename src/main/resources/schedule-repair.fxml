<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<HBox prefHeight="400.0" prefWidth="600.0" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projeto2.Desktop.ScheduleRepairController" style="-fx-background-color: #1a1a1a;">
    <VBox spacing="20.0" style="-fx-padding: 20px;" HBox.hgrow="ALWAYS">
        <VBox styleClass="card-panel" spacing="15.0">
            <Label text="Agendar Reparação" style="-fx-text-fill: white; -fx-font-size: 18px;" />
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label text="Data:" style="-fx-text-fill: white;" />
                    <TextField fx:id="dateField" GridPane.columnIndex="1" style="-fx-background-color: #3a3a3a; -fx-padding: 5px; -fx-background-radius: 5px;" styleClass="text-input" />
                    <Label text="Hora:" style="-fx-text-fill: white;" GridPane.rowIndex="1" />
                    <TextField fx:id="timeField" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-color: #3a3a3a; -fx-padding: 5px; -fx-background-radius: 5px;" styleClass="text-input" />
                    <Label text="Slot de Agendamento:" style="-fx-text-fill: white;" GridPane.rowIndex="2" />
                    <Button mnemonicParsing="false" text="Selecionar Slot de Agendamento" onAction="#handleSelectAppointmentSlot" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-background-color: #3a3a3a; -fx-padding: 5px; -fx-background-radius: 5px;" styleClass="text-input" />
                    <Label text="Observações:" style="-fx-text-fill: white;" GridPane.rowIndex="3" />
                    <TextField fx:id="observationsField" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-background-color: #3a3a3a; -fx-padding: 5px; -fx-background-radius: 5px;" styleClass="text-input" />
                </children>
            </GridPane>
            <Button text="Confirmar" onAction="#handleConfirm" style="-fx-background-color: linear-gradient(to right, #ff6b35, #ff9a00); -fx-text-fill: white; -fx-padding: 10px; -fx-font-size: 16px; -fx-background-radius: 5px;" />
        </VBox>
    </VBox>
</HBox>