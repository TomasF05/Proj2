<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projeto2.Desktop.CreateInvoiceController"
      spacing="20.0"
      style="-fx-background-color: #1a1a1a; -fx-padding: 20px;">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>
    <Label text="Criar Recibo" style="-fx-text-fill: white; -fx-font-size: 18px;" />

    <VBox spacing="15.0" style="-fx-background-color: #2d2d2d; -fx-padding: 15px; -fx-spacing: 10px;">
        <HBox spacing="10.0">
            <Label text="Nome do Cliente:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <TextField fx:id="clientNameField" style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <HBox spacing="10.0">
            <Label text="Data do Recibo:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <TextField fx:id="invoiceDateField" style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <HBox spacing="10.0">
            <Label text="Numero do Recibo:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <TextField fx:id="invoiceNumberField" style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <HBox spacing="10.0">
            <Label text="Serviço prestado:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <TextField fx:id="serviceProvidedField" style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <HBox spacing="10.0">
            <Label text="Peças utilizadas:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <TextField fx:id="partsUsedField" style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <HBox spacing="10.0">
            <Label text="Mão de obra:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <TextField fx:id="laborField" style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <HBox spacing="10.0">
            <Label text="Método de Pagamento:" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            <TextField fx:id="paymentMethodField" style="-fx-background-color: #3a3a3a; -fx-padding: 10px; -fx-background-radius: 5px;" />
        </HBox>
        <Button text="Criar Recibo" onAction="#handleCreateInvoice" style="-fx-background-color: linear-gradient(to right, #ff6b35, #ff9a00); -fx-text-fill: white; -fx-padding: 10px; -fx-font-size: 16px; -fx-background-radius: 5px;" />
    </VBox>
</VBox>